<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.theme.AdicionarCarrinhoActivity">

    <EditText
        android:id="@+id/data_pedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Data do Pedido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/valor_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Valor Total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_pedido"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/status_pedido_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Status do Pedido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valor_total"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/cliente_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Cliente ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_pedido_id"
        android:padding="8dp"/>

    <Button
        android:id="@+id/adicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        app:layout_constraintTop_toBottomOf="@+id/cliente_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
